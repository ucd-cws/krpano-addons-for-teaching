<plugin name="sometable" url="textfield.swf"
	origin="left"
	width="30%" height="100%"
	x="0" y="0"
	html="data:htmldata1"
	css="data:cssdata1"
	borderwidth="1"
	bordercolor="0xFFFFFF"
	backgroundcolor="0xFFFFFF"
	selectable="true"
	keep="true"
	/>                              

<data name="htmldata1">
  <div id="leftleft">
    <p align="center">
      <font face="times" size="+4">
	<b>Hello from somewhere</b>
	</font><br/>
    </p>
    <p>
      <a href="event:change_pano(0)">Pano 0</a><br/>
      <a href="event:change_pano(1)">Pano 1</a><br/>
      <a href="event:change_pano(2)">Pano 2</a><br/>
      <a href="event:change_pano(3)">Pano 3</a><br/>
      <a href="event:change_pano(4)">Pano 4</a><br/>
      get(xml.url)
    </p>
  </div>
</data>

<data name="cssdata1">
  a { text-decoration:underline; font-weight:bold; }
  a:hover { color:#885500; }
  htmldata1:leftleft {height: 100%; min-height: 100%; width: 85%; margin: 0 auto; float:left;}
</data> 

