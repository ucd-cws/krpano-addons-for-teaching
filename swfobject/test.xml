<action name="show_table">
  set(plugin[sometable].visible, true);
  set(plugin[sometable].enabled, true);
  set(plugin[in2].ondown, hide_table);
</action>

<action name="hide_table">
  set(plugin[sometable].visible, false);
  set(plugin[sometable].enabled, false);
  set(plugin[in2].ondown, show_table);
</action>

